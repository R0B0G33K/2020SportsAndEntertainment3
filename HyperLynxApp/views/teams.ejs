<!DOCTYPE html>
<%- include('./partials/head') %>
    <body>
        <%- include('./partials/navbarAuth') %>
        <div class="container">

            <h1>Choose a team for your trivia</h1>
    
            <div class="container"> 
                <ul class="flex-outer">
                <% for(let i = 0; i < teamList.length; i++) { %>
                    <li><button style="font-size: 100%;" class="button" id="button"><%= teamList[i].split("_").join(" ") %></button></li>
                <% } %>
                </ul>
            </div>
        </div>
        

        
        <script>
            var buttons = document.getElementsByTagName('button');
            for(var i=0, len = buttons.length; i < len; i++){
                buttons[i].onclick= function (){
                    clickFunction (this);
                }
            }

            function clickFunction(elmnt){
                var team = elmnt.innerHTML;
                team = team.split(" ").join("_");
                location.href = "/home/<%= type %>/<%= orgName %>/"+team+"";
            };              
        </script>
    </body>
</html>